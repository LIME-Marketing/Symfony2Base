{% extends "::base.html.twig" %}


{% block header_scripts %}
{{ parent() }}
</script>
{% endblock header_scripts %}

{% block stylesheets %}
    {{ parent () }}
{% endblock stylesheets %}

{% block content %}
<h1>Login</h1>

<div class="row">
    <div class="span7">
        {% if error %}
            <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
        {% endif %}

        <form action="{{ path("fos_user_security_check") }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            <div class="clearfix">
                <input type="text" class="span6" id="username" name="_username" value="{{ last_username }}" placeholder="{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}"/><br />
            </div>
            <div class="clearfix">
                <input type="password" class="span6" id="password" name="_password" placeholder="{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}"/>
            </div>
            <div class="clearfix">
                <div>
                    <label for="remember_me" class="checkbox">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
                    </label>
                </div>
                <div>
                    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" class="btn"/>
                </div>
                <div>
                    <a href="{{ path('fos_user_resetting_request') }}"><em>forgot password</em></a>
                </div>
            </div>
        </form>
    </div>
    <div class="span4">
        <h3>Don't have an account? <br /> Sign up now</h3>
        <a href="{{ path('fos_user_registration_register') }}" class="btn btn-xlarge ">Sign Up</a>
    </div>
</div>
{% endblock content %}
