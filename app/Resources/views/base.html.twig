<!DOCTYPE html>
<html lang="en" {% block html_attributess %}{% endblock %}>
    <head>
        <meta charset="utf-8">
        <title>Symfony Starter</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="">
        <meta name="author" content="">
        {% block stylesheets %}
        <link href="{{ asset('less/bootstrap.less') }}" rel="stylesheet/less" type="text/css">
        {% endblock stylesheets %}
        <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
        <!--[if lt IE 9]>
          <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
        <!-- Le fav and touch icons -->
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}">
        <link rel="apple-touch-icon" href="{{ asset('img/apple-touch-icon.png') }}">
        {% block header_scripts %}
            <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
            <script src="{{ asset('js/less-1.3.0.min.js') }}" type="text/javascript"></script>
        {% endblock %}
    </head>
    <body>

        <div class="navbar">
            <div class="navbar-inner">
                <div class="container">
                    <div class="brand-wrapper">
                        <a class="brand" href="{{ path('_home') }}">Symfony Starter</a>
                    </div>
                    <div class="nav-collapse">
                        <ul class="nav pull-right" id="top-nav">
                            {% block nav_items %}
                                <li><a href="{{ path('_home') }}">Home</a></li>
                                <li class="divider"></li>
                                <li><a href="{{ path('lime.frontend.page.about') }}">About</a></li>
                                <li class="divider"></li>
                                <li><a href="{{ path('lime.frontend.page.contact') }}">Contact Us</a></li>
                                {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                                <li><a href="{{ path('fos_user_profile_show') }}">My Account</a></li>
                                {% else %}
                                <li><a href="{{ path('fos_user_security_login') }}">Login</a></li>
                                {% endif %}
                            {% endblock %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="container" id="main-content">
            <div class="well">
                {% block content %}{% endblock %}
            </div>
        </div>
        <div class="container" id="footer">
            <div class="row">
                <div class="span12">
                    <footer>
                       
                    </footer>
                </div>
            </div>
        </div>
        {% block footer_scripts %}
        <script type="text/javascript" src="{{ asset('js/json2.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/knockout-2.0.0.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/bootstrap.js') }}"></script>
        {% endblock %}
    </body>
</html>
